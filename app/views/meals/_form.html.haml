= form_for @meal do |f|
  - if @meal.errors.any?
    #error-explanation
      %h2= "#{pluralize(@meal.errors.count, "error")} prohibited this meal from being saved:"
      %ul
        - @meal.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    .control
      = f.text_field :name, class: 'input'
  .field
    = f.label :portions
    .control
      = f.number_field :portions, class: 'input'
  .field
    = f.label :price_per_portion
    .control
      = f.text_field :price_per_portion, class: 'input'
  = f.fields_for :recipeLists do |rl|
    .field
      = rl.label :recipe
      .control
        .select
          = rl.collection_select(:recipe_id, Recipe.all, :id, :title, {},
                              id: 'recipe-title')
  .field
    .control
      = f.submit class: 'button is-link'