.ui.grid.container
  %h1 Listing products
  .three.column.row
    - @products.each do |product|
      .four.wide.column.name
        = link_to product.name.to_s, product
      .three.wide.column.brand
        = product.brand
      .three.wide.column.amount-unit
        #{product.amount} #{product.unit}
      .three.wide.column.price
        = humanized_money_with_symbol product.price
      .three.wide.column.actions
        .ui.two.column.divided.grid
          .center.aligned.column
            = link_to 'Edit', edit_product_path(product)
          .center.aligned.column
            = link_to 'Delete',
              product,
              method: :delete,
              data: { confirm: 'Are you sure?' }
  = link_to 'New Product', new_product_path
