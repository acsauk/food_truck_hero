= form_with(model: recipe, local: true) do |form|
  - if recipe.errors.any?
    #error_explanation
      %h2
        = pluralize(recipe.errors.count, "error")
        prohibited this recipe from being saved:
      %ul
        - recipe.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title, id: :recipe_title
  .field
    = form.label :instructions
    = form.text_area :instructions, id: :recipe_instructions
  .field
    = form.label :ingredient
    = form.text_field :ingredient, id: :ingredient_1
  .field
    = form.label :quantity
    = form.text_field :quantity, id: :quantity_1
  .field
    = form.label :unit
    = form.text_field :unit, id: :unit_1
  .actions
    = form.submit
